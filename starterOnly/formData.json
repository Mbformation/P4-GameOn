{
  "submitButtonSelector": ".btn-submit",
  "fields": [
      {
        "selector": "#first",
        "type": "text-input",
        "regex": "^[A-Za-z]{2,}(?:[-'][A-Za-z]+)*$",
        "required": true,
        "errorMessage": "Veuillez renseigner un Pr√©nom correct"
      },
      {
        "selector": "#last",
        "type": "text-input",
        "regex": "^[A-Za-z]{2,}(?:[-'][A-Za-z]+)*$",
        "required": true,
        "errorMessage": "Veuillez renseigner une Nom correct"
      },
      {
        "selector": "#email",
        "type": "text-input",
        "regex": "^\\S+@\\S+\\.\\S+$",
        "required": true,
        "errorMessage": "Veuillez renseigner un email correct"
      },
      {
        "selector": "#birthdate",
        "type": "text-input",
        "regex": "^(19[2-9]\\d|20[01]\\d|2020)-(0[1-9]|1[0-2])-([0-2]\\d|3[01])$",
        "required": true,
        "errorMessage": "Veuillez renseigner une date correcte"
      },
      {
        "selector": "#quantity",
        "type": "text-input",
        "regex": "^(?:[1-9]|[1-9][0-9])$",
        "required": true,
        "errorMessage": "Veuillez renseigner un nombre entre 1 et 99 inclus"
      },
      {
        "selector": "input[name='location']",
        "type": "radio-button",
        "required": true,
        "errorMessage": "Veuillez renseigner une ville"
      },
      {
        "selector": "#checkbox1",
        "type": "checkbox",
        "required": true,
        "errorMessage": "Veuillez accepter les termes et conditions d'utilisation"
      },
      {
        "selector": "#checkbox2",
        "type": "checkbox",
        "required": false
      }
    ]
  }