{
    "formSelector": "#myForm",
    "submitButtonSelector": ".btn-submit",
    "fields": [
      {
        "fieldSelector": "first",
        "fieldType": "text-input",
        "fieldRegex": "^[A-Za-z]+(?:[-'][A-Za-z]+)*$",
        "fieldRequired": true,
        "fieldErrorMessage": "Pr√©nom Valide"
      },
      {
        "fieldSelector": "last",
        "fieldType": "text-input",
        "fieldRegex": "^[A-Za-z]+(?:[-'][A-Za-z]+)*$",
        "fieldRequired": true,
        "fieldErrorMessage": "Nom Valide"
      },
      {
        "fieldSelector": "email",
        "fieldType": "text-input",
        "fieldRegex": "^\\S+@\\S+\\.\\S+$",
        "fieldRequired": true,
        "fieldErrorMessage": "Email Valide"
      },
      {
        "fieldSelector": "birthdate",
        "fieldType": "text-input",
        "fieldRegex": "^(19[2-9]\\d|20[01]\\d|2020)-(0[1-9]|1[0-2])-([0-2]\\d|3[01])$",
        "fieldRequired": true,
        "fieldErrorMessage": "Date Valide"
      },
      {
        "fieldSelector": "quantity",
        "fieldType": "text-input",
        "fieldRegex": "^(?:[1-9]|[1-9][0-9])$",
        "fieldRequired": true,
        "fieldErrorMessage": "Entre 1 et 99"
      },
      {
        "fieldSelector": "quantity",
        "fieldType": "radio-button",
        "fieldRequired": true
      },
      {
        "fieldSelector": "quantity",
        "fieldType": "checkbox",
        "fieldRequired": true
      }
    ]
  }